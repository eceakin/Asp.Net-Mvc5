@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }


    <h2>Faturalar </h2>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Seri No</th>
            <th>Sıra No</th>
            <th>Vergi Dairesi</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Toplam</th>
            <th>Teslim Eden</th>
            <th>Teslim Alan</th>
            <th>Güncelle</th>
            <th>Teslim Detaylar</th>
        </tr>
        @foreach (var k in Model)
        {

            <tr>
                <td>@k.FaturaID</td>
                <td>@k.FaturaSeriNo</td>
                <td>@k.FaturaSıraNo</td>
                <td>@k.VergiDairesi</td>
                <td>@k.Tarih</td>
                <td>@k.Saat</td>
                <td>@k.Toplam</td>
                <td>@k.TeslimEden</td>
                <td>@k.TeslimAlan</td>


                <td><a href="/Fatura/FaturaGetir/@k.FaturaID" 
                       class="btn btn-success">Güncelle</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.FaturaID" 
                       class="btn btn-success" style="background-color: 
                        black">Detaylar</a></td>


            </tr>
        }



    </table>
    <a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>

