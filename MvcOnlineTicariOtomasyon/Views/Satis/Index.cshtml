@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.SatisID</td>
            <td>@k.Urun.UrunAd</td>
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td>@k.Personel.PersonelAd</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.ToplamTutar</td>
            <td>@k.Tarih</td>
            <td>
                <a href="/Personel/PersonelGetir/@k.PersonelID"
                   class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@k.PersonelID"
            class="btn btn-success" style="background-color:black">Detaylar</a>
            </td>


        </tr>
    }


</table>
<br />
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>

